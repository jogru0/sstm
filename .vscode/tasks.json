{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ project",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "clear && make test",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build C++ project for debug",
            "type": "shell",
            "group": "build",
            "command": "clear && make debug",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build C++ project for release",
            "type": "shell",
            "group": "build",
            "command": "clear && make release",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Tidy",
            "group": "test",
            "type": "shell",
            "command": "clear && clang-tidy src/main.cpp -- -std=c++20 -iquote include -I submodules -isystem external_header -isystem /usr/include/freetype2",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "absolute"
            }
        },
        {
            "label": "Build & run Testsuite",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "clear && make test -C testsuite/ && ./testsuite/bin/turning-testsuite-test || false",
            "presentation": {
                "showReuseMessage": false
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build Testsuite for debug",
            "type": "shell",
            "group": "test",
            "command": "clear && make debug -C testsuite/",
            "presentation": {
                "showReuseMessage": false
            },
            "problemMatcher": "$gcc"
        }
    ]
}
